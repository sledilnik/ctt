{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": "število ključev objavljenih na dan po stopnjah tveganja (interaktivno)",
  "width": 700,
  "height": 250,
  "data": {
    "url": "./plots/dataByRisk.json"
  },
  "transform": [
    {
      "calculate": "datum.published + ' objavljenih ključev s stopnjo tveganja ' + datum.risk",
      "as": "tt"
    }
  ],
  "layer": [
    {
      "encoding": {
        "x": {
          "title": "datum",
          "timeUnit": "utcmonthdate",
          "field": "date",
          "type": "temporal",
          "axis": {
            "labelAngle": 0,
            "tickCount": "week",
            "labelExpr": "[timeFormat(datum.value, '%d'), timeFormat(datum.value, '%d') <= '07' ? timeFormat(datum.value, '%b') : '']",
            "gridDash": {
              "condition": {
                "test": {
                  "field": "value",
                  "timeUnit": "day",
                  "equal": 1
                },
                "value": []
              },
              "value": [
                2,
                2
              ]
            },
            "tickDash": {
              "condition": {
                "test": {
                  "field": "value",
                  "timeUnit": "day",
                  "equal": 1
                },
                "value": []
              },
              "value": [
                2,
                2
              ]
            }
          }
        },
        "y": {
          "field": "published",
          "type": "quantitative",
          "axis": {
            "title": "objavljenih ključev na dan"
          }
        },
        "color": {
          "title": "tveganje",
          "field": "risk",
          "type": "ordinal"
        }
      },
      "layer": [
        {
          "mark": {
            "type": "line",
            "interpolate": "monotone",
            "point": true
          }
        },
        {
          "selection": {
            "label": {
              "type": "single",
              "nearest": true,
              "on": "mouseover",
              "encodings": [
                "x"
              ],
              "empty": "none"
            }
          },
          "mark": "point",
          "encoding": {
            "opacity": {
              "condition": {
                "selection": "label",
                "value": 1
              },
              "value": 0
            }
          }
        }
      ]
    },
    {
      "transform": [
        {
          "filter": {
            "selection": "label"
          }
        }
      ],
      "layer": [
        {
          "mark": {
            "type": "rule",
            "color": "gray"
          },
          "encoding": {
            "x": {
              "timeUnit": "utcmonthdate",
              "field": "date",
              "type": "temporal",
              "axis": {
                "labelAngle": 0
              }
            }
          }
        },
        {
          "encoding": {
            "text": {
              "type": "text",
              "field": "tt"
            },
            "x": {
              "timeUnit": "utcmonthdate",
              "field": "date",
              "type": "temporal",
              "axis": {
                "labelAngle": 0
              }
            },
            "y": {
              "type": "quantitative",
              "field": "published"
            }
          },
          "layer": [
            {
              "mark": {
                "type": "text",
                "stroke": "white",
                "strokeWidth": 2,
                "align": "right",
                "dx": -5,
                "dy": -5
              }
            },
            {
              "mark": {
                "type": "text",
                "align": "right",
                "dx": -5,
                "dy": -5
              },
              "encoding": {
                "color": {
                  "type": "ordinal",
                  "field": "risk"
                }
              }
            }
          ]
        }
      ]
    }
  ]
}
